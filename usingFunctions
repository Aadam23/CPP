#include <iostream>
#include <iomanip>
using namespace std;

int add(int a, int b) {
    int res;
    res = a + b;
    return(res);
}

int sub(int m, int n) {
    return(m-n);
}

double division(double c, double d) {
    return(c/d);
}

int main() {
    int x, y;
    double result;
    cout << "Enter two numbers: ";
    cin >> x >> y;
    
    result = add(x,y);
    cout << "x + y = " << result << endl;
    
    result = sub(x, y);
    cout << "x - y = " << result << endl;
    
    result = division(x,y);
    cout << "x/y = " << result << endl;
    
}
